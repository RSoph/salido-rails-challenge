<table>
	<th>Name</th>
	<th>Vineyard</th>
	<th>Highest Rating</th>
	<th>Description</th>
	<% @wines.each do |wine| %>
		<tr>
			<td><%= link_to "#{wine.name}", wine_path(wine) %></td>
			<td><%= wine.vineyard || "Vineyard info not found." %></td>
			<td><%= wine.community_rating %></td>
			<td><%= wine.description || "No description available."%></td>
		</tr>
	<%end%>
</table>

<%= link_to "Add new wine", new_wine_path %>